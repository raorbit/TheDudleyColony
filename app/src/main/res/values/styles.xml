<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_window</item>
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/AppBarDark</item>
        <item name="colorPrimaryDark">@color/StatusBarDark</item>
        <item name="colorAccent">@color/iris_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>


    <style name="RadioButtonWhiteCheck" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_light</item>
    </style>

    <style name="RadioButtonBlackCheck" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_dark</item>
    </style>
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">18dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>

</resources>
